# symlink from your home directory: ln -s git-config/git-config .gitconfig

[alias]
  s = status
  b = branch -vv
  c = checkout
  d = diff
  ds = diff --stat
  dn = diff --name-only
  du = diff @{upstream}...
  do = diff origin/HEAD...
  dsu = diff --stat @{upstream}...
  dso = diff --stat origin/HEAD...
  dus = diff --stat @{upstream}...
  dos = diff --stat origin/HEAD...
  l = log
  ls = log --stat
  l1 = log --oneline
  lu = log @{upstream}..
  lo = log origin/HEAD..
  cwip = commit -a -m "WIP"
  commitamend = commit --amend -C HEAD
  mb = merge-base @{upstream} HEAD
[merge]
  conflictstyle = diff3
  tool = p4merge
[rerere]
  enabled = 1
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  commit = reverse yellow
  meta = yellow
  frag = magenta bold
  func = cyan bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan


# symlink from your home directory: ln -s git-config/git-config .gitconfig

[alias]
  s = status
  b = branch -vv
  f = fetch
  fo = fetch origin

  # checkout variants
  c = checkout
  cm = checkout master
  co = checkout origin/master
  cu = checkout @{upstream}
  cb = checkout -b

  # diff variants
  d = diff
  dt = difftool --dir-diff
  dn = diff --name-only
  ds = diff --stat

  # diff variants with cached index
  dc = diff --cached
  dcn = diff --cached --name-only
  dnc = diff --cached --name-only
  dcs = diff --cached --stat
  dsc = diff --cached --stat
  dch = diff --cached
  dhc = diff --cached
  dco = diff --cached origin/master
  doc = diff --cached origin/master
  dcu = diff --cached @{upstream}
  duc = diff --cached @{upstream}

  # diff variants with head
  dh = diff HEAD
  dht = difftool --dir-diff HEAD
  dth = difftool --dir-diff HEAD
  dhn = diff --name-only HEAD
  dnh = diff --name-only HEAD
  dhs = diff --stat HEAD
  dsh = diff --stat HEAD

  # diff variants with origin/master
  do = diff origin/master...
  dot = difftool --dir-diff origin/master...
  dto = difftool --dir-diff origin/master...
  don = diff --name-only origin/master...
  dno = diff --name-only origin/master...
  dos = diff --stat origin/master...
  dso = diff --stat origin/master...

  # diff variants with origin/lkgr
  dl = diff origin/lkgr...
  dlt = difftool --dir-diff origin/lkgr...
  dtl = difftool --dir-diff origin/lkgr...
  dln = diff --name-only origin/lkgr...
  dnl = diff --name-only origin/lkgr...
  dls = diff --stat origin/lkgr...
  dsl = diff --stat origin/lkgr...

  # diff variants with upstream
  du = diff @{upstream}...
  dut = difftool --dir-diff @{upstream}...
  dtu = difftool --dir-diff @{upstream}...
  dun = diff --name-only @{upstream}...
  dnu = diff --name-only @{upstream}...
  dus = diff --stat @{upstream}...
  dsu = diff --stat @{upstream}...

  # log variants
  l = log --relative-date
  ls = log --relative-date --stat
  l1 = log --relative-date --oneline
  lu = log --relative-date @{upstream}..
  lo = log --relative-date origin/HEAD..
  lf = log --relative-date --first-parent
  lp = log --relative-date -p

  # commit
  cam = commit -a -m
  cwip = commit -a -m "WIP"
  commitamend = commit --amend -C HEAD
  commitempty = commit --allow-empty
  commitcomment = commit -am "comment(s)"
  commitchange = commit --allow-empty -am "ChangeLogs"
  commitupload = commit --allow-empty -m "upload"

  # retires a branch by renaming it to zMONTH-DAY-name. Use: git bretire branchname
  # this one allows autocomplete.
  bretire = "!f(){ git branch -m $1 z$(date +%m-%d-)$1; };f"
  #bretire_safer = "!f(){ [ "$1." != "." ] && git branch -m $1 z$(date +%m-%d-)$1 || echo "Usage: git bretire branchname"; };f"

  # misc
  mb = merge-base @{upstream} HEAD
  conflicts = diff --name-only --diff-filter=U
  set-upstream-master = branch --set-upstream-to=origin/master
  set-upstream-lkcr = branch --set-upstream-to=origin/lkcr
  set-upstream-lkgr = branch --set-upstream-to=origin/lkgr

[branch]
  autosetupmerge = always
[diff]
  tool = meld
[difftool]
  prompt = false
[merge]
  conflictstyle = diff3
  tool = p4v
[mergetool]
  prompt = false
[mergetool "p4v"]
  cmd = p4v -merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
[rerere]
  enabled = 1
[diff]
  renames = copies
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  commit = reverse yellow
  meta = yellow
  frag = magenta bold
  func = cyan bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

